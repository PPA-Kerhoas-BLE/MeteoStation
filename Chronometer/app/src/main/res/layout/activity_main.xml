<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ppe.enib.fr.chronometer.MainActivity"
    android:background="@drawable/backgroudn">


    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:textColor="#4169E1"
        android:textSize="@dimen/Chronometer_size"
        android:layout_centerHorizontal="true"
        android:text="@string/Start_chronometer"
        android:layout_alignParentTop="true"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StartId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/button"
        android:background="#a2d1d4"
        android:textStyle="bold"
        android:textColor="#0da30a" />

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/restartId"
        android:layout_alignBaseline="@+id/button"
        android:background="#a2d1d4"
        android:textStyle="bold"
        android:textColor="#c20808" />

    <Button
        android:text="Save Lap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/lapId"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:background="#a2d1d4"
        android:textStyle="bold"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lapId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/listview1"/>



</RelativeLayout>
